{
  "name": "swiftly-backend",
  "version": "1.0.0",
  "description": "Swiftly Helpdesk System - Backend API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:contracts": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit/aiRoutesContract.test.js tests/unit/authRoutesContract.test.js tests/unit/ticketRoutesContract.test.js",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
    "arch:check": "depcruise --config .dependency-cruiser.cjs --output-type err --progress none src",
    "migration:check": "node ./scripts/validateVerticalSliceMigration.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "render-build": "npm install",
    "render-start": "node src/server.js",
    "seed:solutions": "node -e \"import('./scripts/seedSolutions.js').then(module => module.default())\"",
    "prepare": "node ./scripts/prepare.js",
    "secrets:scan": "node ./scripts/runSecretsScan.js",
    "secrets:ci": "gitleaks detect --source . --config .gitleaks.toml --redact --no-banner"
  },
  "keywords": [
    "helpdesk",
    "nodejs",
    "express",
    "mongodb",
    "api"
  ],
  "author": "Swiftly Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "openai": "^5.13.1",
    "pino": "^9.6.0",
    "pino-http": "^10.3.0",
    "redis": "^4.7.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.17.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "shadcn": "^3.7.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
